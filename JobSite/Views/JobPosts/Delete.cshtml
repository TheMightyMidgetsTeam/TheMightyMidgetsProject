@model JobSite.Models.JobPost

@{
    ViewBag.Title = "Изтриване";
}

<h2>Изтриване!</h2>

<h3>Сигурни ли сте, че искате да изтриете това?</h3>
<div>
    <h4><u>@Html.DisplayFor(model => model.Heading)</u></h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Заглавие")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Heading)
        </dd>

        <dt>
            @Html.DisplayName("Дата на публикуване")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PublishDate)
        </dd>

        <dt>
            @Html.DisplayName("Валидна до")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ExpireDate)
        </dd>

        <dt>
            @Html.DisplayName("Описание")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Body)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Изтрий" class="btn btn-default" /> |
            @Html.ActionLink("Към списъка с обяви", "Index")
        </div>
    }
</div>
