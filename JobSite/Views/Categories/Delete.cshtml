@model JobSite.Models.Category

@{
    ViewBag.Title = "Изтриване";
}

<h2>Изтриване!</h2>

<h3>Сигурни ли сте, че искате да изтриете това?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <h3>@Html.DisplayName("Категория:")</h3>
        </dt>

        <dd>
            <h3>@Html.DisplayFor(model => model.CategoryName)</h3>
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Изтрий" class="btn btn-default" /> |
            @Html.ActionLink("Към списъка с категории", "Index")
        </div>
    }
</div>
